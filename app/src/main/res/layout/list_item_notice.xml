<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notice_item_from"
        android:layout_below="@+id/notice_item_name"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:text="@string/notice_item_from" />

    <TextView
        android:id="@+id/notice_item_content"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_toEndOf="@id/notice_item_name"
        android:text="@string/notice_item_content"/>

</RelativeLayout>